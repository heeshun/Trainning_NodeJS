<% layout('../layout.ejs') -%>
    <script>
        if (!!window.performance && window.performance.navigation.type == 2) {
            window.location.reload();
        }</script>

    <head>
        <link rel="stylesheet" href="stylesheets/film/create.css">
        <script src="/javascripts/film/create.js"></script>
    </head>
    <form ng-controller="createCtrl" name="addFilm">
        <nav class="navbar navbar-inverse">
            <div class="container-fuild">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                        aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <i class="glyphicon glyphicon-home" style="color:aliceblue" aria-hidden="true">
                        </i>
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="filmType">
                    <ul class="nav navbar-nav navbar-right">
                        <li ng-show="user.name">
                            <a class="navbar-brand" href="#" style="color: aliceblue">{{ 'Chào, ' + user.name}}</a>
                        </li>
                        <li ng-show="user.name">
                            <a class="navbar-brand hvr-sweep-to-right" href="#" ng-click="clickLogout()" style="color: aliceblue">Thoát</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <h1 class="animated bounceInLeft" style="text-align: center; font-size: 70px">Thêm phim mới</h1>
        <div class="form-margin">
            <div class="row">
                <div class="col-xs-6 col-md-3 col-md-offset-2 animated bounceInRight" style="text-align: center; font-size: 20px">
                    <a class="thumbnail img-responsive">
                        <img src="./images/upload-cloud.png" id="imageUpload" style="width: auto; height: 300px">
                    </a>
                    <form ref='uploadForm' id='uploadForm' action='/api/cinema/upload' method='post' encType="multipart/form-data">
                        <input required class="btn btn-info" id="chooseImage" type="file" name="sampleFile" />
                    </form>
                </div>
                <div class="col-md-4 col-md-offset-1 label-edit animated bounceInLeft">
                    <div class="form-group">
                        <label>Tên bộ phim
                            <small>*</small>
                        </label>
                        <input required type="text" class="form-control" id="filmName" ng-model="filmName">
                    </div>
                    <div class="form-group">
                        <label>Thể loại
                            <small>*</small>
                        </label>
                        <select required class="form-control" ng-model="filmType" id="filmType">
                            <option disabled selected style="color: gray;" value=""></option>
                            <option ng-repeat="type in listTypeFilms" value="{{type}}">{{type}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Năm phát hành
                            <small>*</small>
                        </label>
                        <select required class="form-control" ng-model="filmYear" id="filmYear" ng-init="filmYear=listYear[0]">
                            <option disabled selected style="color: gray;" value=""></option>
                            <option ng-repeat="year in listYear" value="{{year}}">{{year}}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Đạo diễn
                            <small>*</small>
                        </label>
                        <input required type="text" class="form-control" id="filmAuthor" ng-model="filmAuthor">
                    </div>
                    <div class="form-group">
                        <label>Nội dung
                            <small>*</small>
                        </label>
                        <textarea required type="text" class="form-control" id="filmContent" ng-model="filmContent" placeholder="Mô tả nội dung chính của bộ phim"></textarea>
                    </div>
                    <div class="text-center">
                        <input class="btn btn-success hvr-shadow-radial" type="submit" ng-click="clickUploadFilm()" value="Tạo phim">
                    </div>
                </div>
            </div>
        </div>
    </form>